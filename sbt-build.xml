<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="sgine sbt" basedir="." default="test">
	<property name="launch" location="sbt/sbt-launch-0.7.4.jar"/>

	<target name="clean">
		<java taskname="sbt" jar="${launch}" fork="true">
			<arg value="clean"/>
		</java>
	</target>
	
	<target name="clean-cache">
		<java taskname="sbt" jar="${launch}" fork="true">
			<arg value="clean-cache"/>
		</java>
	</target>
	
	<target name="clean-lib">
		<java taskname="sbt" jar="${launch}" fork="true">
			<arg value="clean-lib"/>
		</java>
	</target>
	
	<target name="test">
		<java taskname="sbt" jar="${launch}" fork="true">
			<arg value="test"/>
		</java>
	</target>
	
	<target name="package">
		<java taskname="sbt" jar="${launch}" fork="true">
			<arg value="package"/>
			<arg value="package-src"/>
			<arg value="package-test"/>
			<arg value="package-test-src"/>
		</java>
	</target>
	
	<target name="actions">
		<java taskname="sbt" jar="${launch}" fork="true">
			<arg value="actions"/>
		</java>
	</target>
</project>
